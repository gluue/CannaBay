<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linearLayoutListButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp">
    </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"
        android:id="@+id/imageViewHistoryItem"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewHistoryName"
        android:layout_marginStart="15dp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageViewHistoryItem"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/imageViewHistoryItem"
        android:layout_marginEnd="15dp"
        android:id="@+id/textViewHistoryType"
        android:layout_below="@+id/textViewHistoryName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/imageViewHistoryItem"
        android:layout_marginEnd="15dp"
        android:id="@+id/textViewHistoryDesc"
        android:layout_below="@id/textViewHistoryType"/>

</RelativeLayout>